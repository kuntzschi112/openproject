<% html_title(t(:label_administration), t("openid_connect.providers.label_add_new")) -%>

<%=
  render Primer::OpenProject::PageHeader.new do |header|
    header.with_title { t("openid_connect.providers.label_add_new") }
    header.with_breadcrumbs([{ href: admin_index_path, text: t(:label_administration) },
                             { href: admin_settings_authentication_path, text: t(:label_authentication) },
                             { href: openid_connect_providers_path, text: t("openid_connect.providers.plural") },
                             t("openid_connect.providers.label_add_new")])
  end
%>

<%= error_messages_for @provider %>

<% content_controller 'admin--openid-connect-providers',
                      dynamic: true %>

<%= labelled_tabular_form_for @provider,
                              html: { class: 'form', autocomplete: 'off' } do |f| %>
  <%= render partial: "form", locals: { f: f } %>
  <p>
    <%= styled_button_tag t(:button_create), class: '-primary -with-icon icon-checkmark' %>
    <%= link_to t(:button_cancel), { action: :index }, class: 'button -with-icon icon-cancel' %>
  </p>
<% end %>
